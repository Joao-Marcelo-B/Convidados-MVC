@model IEnumerable<Convidados.Models.Convidado>

@{
    ViewData["Title"] = "ListaPresenca";
}

<h1>ListaPresenca</h1>

<p>
    <a asp-action="Index">Voltar</a>
</p>

<p>
    <a asp-action="Create">Adicionar novo convidado na lista</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConvidadoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comparecimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConvidadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comparecimento)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ConvidadoId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.ConvidadoId }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.ConvidadoId })
            </td>
        </tr>
}
    </tbody>
</table>
